<script>
  /* COUNTDOWN */
  let count = 3;
  const countdownEl = document.getElementById("countdown");

  const timer = setInterval(() => {
    count--;
    countdownEl.textContent = count;
    if (count === 0) {
      clearInterval(timer);
      document.getElementById("countdownPage").classList.remove("active");
      document.getElementById("page1").classList.add("active");
    }
  }, 1000);

  /* PAGE NAVIGATION */
  let currentPage = 1;
  const totalPages = 3;

  function goToPage(n) {
    if (n < 1 || n > totalPages) return;
    document.querySelectorAll(".page").forEach(p => p.classList.remove("active"));
    document.getElementById("page" + n).classList.add("active");
    currentPage = n;
  }

  /* LOVE EFFECT */
  function showLove() {
    document.getElementById("loveText").style.display = "block";
    const hearts = document.getElementById("hearts");

    for (let i = 0; i < 35; i++) {
      const h = document.createElement("span");
      h.innerHTML = "‚ù§Ô∏è";
      h.style.left = Math.random() * 100 + "vw";
      h.style.animationDuration = (Math.random() * 3 + 3) + "s";
      hearts.appendChild(h);
      setTimeout(() => h.remove(), 5000);
    }
  }

  /* SPARKLES */
  setInterval(() => {
    const s = document.createElement("div");
    s.className = "sparkle";
    s.style.left = Math.random() * 100 + "vw";
    s.style.bottom = "0px";
    s.style.animationDuration = (Math.random() * 3 + 3) + "s";
    document.body.appendChild(s);
    setTimeout(() => s.remove(), 5000);
  }, 300);

  /* SWIPE */
  let startX = 0;
  document.addEventListener("touchstart", e => startX = e.touches[0].clientX);
  document.addEventListener("touchend", e => {
    let diff = startX - e.changedTouches[0].clientX;
    if (Math.abs(diff) > 50) {
      diff > 0 ? goToPage(currentPage + 1) : goToPage(currentPage - 1);
    }
  });
</script>

